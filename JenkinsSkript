pipeline {
    agent any

    stages {
        stage('Checkout from GitHub') {
            steps {
                checkout scmGit(branches: [[name: '*/master']],
                extensions: [submodule(recursiveSubmodules: true,  reference: 'git@github.com:Bersikan/SelenideHelper.git')],
                userRemoteConfigs: [[credentialsId: 'jena', url: 'git@github.com:Bersikan/Selenide.git'],
                [credentialsId: 'jena', url: 'git@github.com:Bersikan/SelenideHelper.git']])
            }
        }
        stage('Run tests'){
            steps {
                bat 'gradle clean test'
            }
        }
    }
     post {
          always {
                    allure includeProperties: false, jdk: '', results: [[path: 'build/allure-results']]
                }
     }
}