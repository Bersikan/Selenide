<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="selenide tests" parallel="true" verbose="2" thread-count="2">
    <groups>
        <run>
            <include name="Smoke"/>
        </run>
    </groups>
    <listeners>
        <listener class-name="testNG.Transform"/>
    </listeners>
    <test name="Selenium tests">
        <packages>
            <package name="selenideTests.*"/>
        </packages>
    </test>
    <test name="Rest tests">
        <packages>
            <package name="restAssuredTests.*"/>
        </packages>
    </test>
</suite>